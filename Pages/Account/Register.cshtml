@page
@model Blog.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrar-se";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label class="control-label">Usuário</label>
        <input asp-for="User.UserName" class="form-control" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Senha</label>
        <input asp-for="User.Password" class="form-control" type="password" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar-se" class="btn btn-primary mt-4" />
        <a asp-page="/Account/Login" class="btn btn-secondary mt-4">Voltar</a>
    </div>
</form>
